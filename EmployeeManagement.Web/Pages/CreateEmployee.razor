@page "/createemployee"

@inherits CreateEmployeeBase


<EditForm Model="@Employees" OnValidSubmit="CreateSubmit">
    <DataAnnotationsValidator />
    <ObjectGraphDataAnnotationsValidator />
    <h3>Edit Employee</h3>
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="Employees.FirstName" />
            <ValidationMessage For="@(() => Employees.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name"
                       @bind-Value="Employees.LastName" />
            <ValidationMessage For="@(() => Employees.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
                       @bind-Value="Employees.Email" />
            <ValidationMessage For="@(() => Employees.Email)" />
        </div>
    </div>  
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" @bind-Value="DepartmentId" class="form-control">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => Employees.Departments.DepartmentName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" @bind-Value="Employees.Gender" class="form-control">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputDate id="gender" @bind-Value="Employees.DateOfBirth" class="form-control">
            </InputDate>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>